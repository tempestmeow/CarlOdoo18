<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Form view inheritance -->
  <record id="view_order_line_form_inherit_batch" model="ir.ui.view">
    <field name="name">sale.order.line.form.batch</field>
    <field name="model">sale.order.line</field>
    <field name="inherit_id" ref="sale.view_order_line_form"/>
    <field name="arch" type="xml">
      <!-- locate the group containing product, qty, price_unit -->
      <xpath expr="//group[./field[@name='product_id']]" position="inside">
        <!-- Insert before quantity -->
        <field name="batch_no" placeholder="Batch #"/>
      </xpath>
    </field>
  </record>

  <!-- Tree (list) view inheritance -->
  <record id="view_order_line_tree_inherit_batch" model="ir.ui.view">
    <field name="name">sale.order.line.tree.batch</field>
    <field name="model">sale.order.line</field>
    <field name="inherit_id" ref="sale.view_order_line_tree"/>
    <field name="arch" type="xml">
      <!-- Add batch_no after product_id in list -->
      <xpath expr="//field[@name='product_id']" position="after">
        <field name="batch_no" string="Batch No."/>
      </xpath>
    </field>
  </record>
</odoo>
