<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- Extend the form view of the sale order -->
  <record id="view_order_form_inherit_batch" model="ir.ui.view">
    <field name="name">sale.order.form.inherit.batch</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
        <field name="batch_no" string="Batch No."/>
      </xpath>
    </field>
  </record>

  <!-- Extend the pop-up form used for sale order lines -->
  <record id="sale_order_line_form_inherit_batch" model="ir.ui.view">
    <field name="name">sale.order.line.form.inherit.batch</field>
    <field name="model">sale.order.line</field>
    <field name="inherit_id" ref="sale.view_sale_order_line_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='product_id']" position="after">
        <field name="batch_no" placeholder="Batch #"/>
      </xpath>
    </field>
  </record>

</odoo>
